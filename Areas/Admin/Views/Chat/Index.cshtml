@model List<ReverseMarket.Areas.Admin.Controllers.AdminConversationViewModel>
@{
    ViewData["Title"] = "إدارة المحادثات";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="fas fa-comments me-2"></i>
                        إدارة المحادثات
                    </h4>
                    <div>
                        <button type="button" class="btn btn-light btn-sm me-2" onclick="loadChatStatistics()">
                            <i class="fas fa-chart-bar me-1"></i>
                            الإحصائيات
                        </button>
                        <button type="button" class="btn btn-light btn-sm" onclick="refreshConversations()">
                            <i class="fas fa-sync-alt me-1"></i>
                            تحديث
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <!-- إحصائيات سريعة -->
                    <div class="row mb-4" id="chatStats" style="display: none;">
                        <div class="col-md-3">
                            <div class="card bg-primary text-white">
                                <div class="card-body text-center">
                                    <i class="fas fa-comments fa-2x mb-2"></i>
                                    <h4 id="totalConversations">-</h4>
                                    <small>إجمالي المحادثات</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-success text-white">
                                <div class="card-body text-center">
                                    <i class="fas fa-envelope fa-2x mb-2"></i>
                                    <h4 id="totalMessages">-</h4>
                                    <small>إجمالي الرسائل</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-warning text-white">
                                <div class="card-body text-center">
                                    <i class="fas fa-calendar-day fa-2x mb-2"></i>
                                    <h4 id="todayMessages">-</h4>
                                    <small>رسائل اليوم</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-info text-white">
                                <div class="card-body text-center">
                                    <i class="fas fa-users fa-2x mb-2"></i>
                                    <h4 id="activeUsersToday">-</h4>
                                    <small>مستخدمين نشطين اليوم</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>المشاركون</th>
                                        <th>آخر رسالة</th>
                                        <th>عدد الرسائل</th>
                                        <th>غير مقروءة</th>
                                        <th>التاريخ</th>
                                        <th>الإجراءات</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var conversation in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="me-3">
                                                        <div class="user-avatar bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                                            @(conversation.User1?.FirstName?.FirstOrDefault() ?? 'U')
                                                        </div>
                                                    </div>
                                                    <div class="me-3">
                                                        <strong>@(conversation.User1?.FirstName) @(conversation.User1?.LastName)</strong>
                                                        <br>
                                                        <small class="text-muted">@conversation.User1?.PhoneNumber</small>
                                                        <span class="badge bg-@(conversation.User1?.UserType == ReverseMarket.Models.Identity.UserType.Buyer ? "success" : "warning") ms-1">
                                                            @(conversation.User1?.UserType == ReverseMarket.Models.Identity.UserType.Buyer ? "مشتري" : "بائع")
                                                        </span>
                                                    </div>
                                                    <div class="text-muted me-2">
                                                        <i class="fas fa-exchange-alt"></i>
                                                    </div>
                                                    <div>
                                                        <div class="user-avatar bg-secondary text-white rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 40px; height: 40px;">
                                                            @(conversation.User2?.FirstName?.FirstOrDefault() ?? 'U')
                                                        </div>
                                                    </div>
                                                    <div>
                                                        <strong>@(conversation.User2?.FirstName) @(conversation.User2?.LastName)</strong>
                                                        <br>
                                                        <small class="text-muted">@conversation.User2?.PhoneNumber</small>
                                                        <span class="badge bg-@(conversation.User2?.UserType == ReverseMarket.Models.Identity.UserType.Buyer ? "success" : "warning") ms-1">
                                                            @(conversation.User2?.UserType == ReverseMarket.Models.Identity.UserType.Buyer ? "مشتري" : "بائع")
                                                        </span>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="text-truncate" style="max-width: 200px;" title="@conversation.LastMessage?.Message">
                                                    @if (conversation.LastMessage != null)
                                                    {
                                                        <strong>@(conversation.LastMessage.SenderId == conversation.User1Id ? conversation.User1?.FirstName : conversation.User2?.FirstName):</strong>
                                                        @conversation.LastMessage.Message
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">لا توجد رسائل</span>
                                                    }
                                                </div>
                                            </td>
                                            <td>
                                                <span class="badge bg-info">
                                                    @conversation.MessageCount
                                                </span>
                                            </td>
                                            <td>
                                                @if (conversation.UnreadCount > 0)
                                                {
                                                    <span class="badge bg-danger">
                                                        @conversation.UnreadCount
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                @if (conversation.LastMessage != null)
                                                {
                                                    <small class="text-muted">
                                                        @conversation.LastMessage.SentAt.ToString("yyyy-MM-dd")
                                                        <br>
                                                        @conversation.LastMessage.SentAt.ToString("HH:mm")
                                                    </small>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <a href="@Url.Action("ViewConversation", new { user1 = conversation.User1Id, user2 = conversation.User2Id })" 
                                                       class="btn btn-outline-primary" title="عرض المحادثة">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <button type="button" class="btn btn-outline-danger" 
                                                            onclick="deleteConversation('@conversation.User1Id', '@conversation.User2Id')" 
                                                            title="حذف المحادثة">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-comments-slash fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">لا توجد محادثات</h5>
                            <p class="text-muted">لم يتم العثور على أي محادثات في النظام</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function loadChatStatistics() {
            $.get('@Url.Action("GetChatStatistics")')
                .done(function(data) {
                    if (data.error) {
                        alert('خطأ في جلب الإحصائيات: ' + data.error);
                        return;
                    }
                    
                    $('#totalConversations').text(data.totalConversations);
                    $('#totalMessages').text(data.totalMessages);
                    $('#todayMessages').text(data.todayMessages);
                    $('#activeUsersToday').text(data.activeUsersToday);
                    $('#chatStats').slideDown();
                })
                .fail(function() {
                    alert('حدث خطأ في جلب الإحصائيات');
                });
        }
        
        function refreshConversations() {
            location.reload();
        }
        
        function deleteConversation(user1, user2) {
            if (!confirm('هل أنت متأكد من حذف هذه المحادثة؟ لا يمكن التراجع عن هذا الإجراء.')) {
                return;
            }
            
            $.post('@Url.Action("DeleteConversation")', {
                user1: user1,
                user2: user2,
                __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
            })
            .done(function(response) {
                if (response.success) {
                    alert('تم حذف المحادثة بنجاح');
                    location.reload();
                } else {
                    alert('خطأ: ' + response.message);
                }
            })
            .fail(function() {
                alert('حدث خطأ في حذف المحادثة');
            });
        }
        
        // تحميل الإحصائيات عند تحميل الصفحة
        $(document).ready(function() {
            loadChatStatistics();
        });
    </script>
}

<style>
    .user-avatar {
        font-weight: bold;
        font-size: 14px;
    }
    
    .table th {
        border-top: none;
        font-weight: 600;
        color: #495057;
    }
    
    .table-hover tbody tr:hover {
        background-color: rgba(0,0,0,.02);
    }
    
    .text-truncate {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
    
    .badge {
        font-size: 0.75em;
    }
    
    .btn-group-sm > .btn {
        padding: 0.25rem 0.5rem;
        font-size: 0.875rem;
    }
    
    .card {
        border: none;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    }
</style>

@Html.AntiForgeryToken()