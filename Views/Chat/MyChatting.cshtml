@using ReverseMarket.SignalR;
@* @model List<UnReadMessagesDto> *@
@model List<ReverseMarket.Controllers.UnReadMessagesDto>
@{
    ViewData["Title"] = "محادثاتي";
    Layout = "~/Views/Shared/_Layout.cshtml"; // استخدام Layout العادي
}

<div class="container-custom">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card-custom">
                <!-- Header -->
                <div class="text-center mb-4">
                    <h1 class="display-6 text-primary">
                        <i class="fas fa-comments me-3"></i>
                        محادثاتي
                    </h1>
                    <p class="text-muted">تواصل مع المستخدمين الآخرين</p>
                </div>

                @if (Model != null && Model.Any())
                {
                    <div class="chat-list">
                        @foreach (var user in Model)
                        {
                            <div class="chat-item">
                                <div class="row align-items-center">
                                    <div class="col-auto">
                                        <div class="chat-avatar">
                                            <i class="fas fa-user fa-2x text-primary"></i>
                                        </div>
                                    </div>
                                    <div class="col">
                                        <h5 class="mb-1">@(user.FirstName + " " + user.LastName)</h5>
                                        <p class="text-muted mb-0">
                                            <small>@user.UserName</small>
                                        </p>
                                    </div>
                                    <div class="col-auto">
                                        <a asp-controller="Chat"
                                           asp-action="Index"
                                           asp-route-withUser="@user.UserName.ToLower()"
                                           class="btn btn-primary">
                                            <i class="fas fa-comment-dots me-2"></i>
                                            فتح المحادثة
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="fas fa-inbox fa-4x text-muted mb-3"></i>
                        <h4 class="text-muted">لا توجد محادثات بعد</h4>
                        <p class="text-muted">ابدأ محادثة جديدة من صفحة الطلبات أو المتاجر</p>
                        <div class="d-flex justify-content-center gap-2 mt-3">
                            <a href="/Requests" class="btn btn-outline-primary">
                                <i class="fas fa-list me-2"></i>
                                تصفح الطلبات
                            </a>
                            <a href="/Stores" class="btn btn-outline-secondary">
                                <i class="fas fa-store me-2"></i>
                                تصفح المتاجر
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .container-custom {
        padding: 2rem 1rem;
        max-width: 1200px;
        margin: 0 auto;
    }

    .card-custom {
        background: white;
        border-radius: 15px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        padding: 2rem;
        border: none;
    }

    .chat-list {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .chat-item {
        padding: 1.5rem;
        border: 1px solid #e9ecef;
        border-radius: 12px;
        background: white;
        transition: all 0.3s ease;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }

    .chat-item:hover {
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        transform: translateY(-3px);
        border-color: #667eea;
    }

    .chat-avatar {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.3);
    }

    .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        border-radius: 8px;
        padding: 0.75rem 1.5rem;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .btn-primary:hover {
        background: linear-gradient(135deg, #5a6fd8 0%, #6a4190 100%);
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
    }

    .btn-outline-primary {
        border: 2px solid #667eea;
        color: #667eea;
        border-radius: 8px;
        padding: 0.75rem 1.5rem;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .btn-outline-primary:hover {
        background: #667eea;
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(102, 126, 234, 0.3);
    }

    .btn-outline-secondary {
        border: 2px solid #6c757d;
        color: #6c757d;
        border-radius: 8px;
        padding: 0.75rem 1.5rem;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .btn-outline-secondary:hover {
        background: #6c757d;
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(108, 117, 125, 0.3);
    }

    /* تحسينات الموبايل */
    @@media (max-width: 768px) {
        .container-custom {
            padding: 1rem 0.5rem;
        }

        .card-custom {
            padding: 1.5rem;
            border-radius: 10px;
            margin: 0 0.5rem;
        }

        .chat-item {
            padding: 1rem;
            border-radius: 10px;
        }

        .chat-item .row {
            flex-direction: column;
            text-align: center;
        }

        .chat-item .col-auto:first-child {
            margin-bottom: 1rem;
        }

        .chat-item .col {
            margin-bottom: 1rem;
        }

        .chat-item .btn {
            width: 100%;
            margin-top: 0;
        }

        .chat-avatar {
            width: 50px;
            height: 50px;
            margin: 0 auto;
        }

        .display-6 {
            font-size: 1.5rem;
        }

        .d-flex.gap-2 {
            flex-direction: column;
            gap: 0.5rem !important;
        }

        .d-flex.gap-2 .btn {
            width: 100%;
        }
    }

    /* تحسينات للشاشات الصغيرة جداً */
    @@media (max-width: 576px) {
        .container-custom {
            padding: 0.5rem 0.25rem;
        }

        .card-custom {
            padding: 1rem;
            margin: 0 0.25rem;
        }

        .chat-item {
            padding: 0.75rem;
        }

        .chat-avatar {
            width: 40px;
            height: 40px;
        }

        .chat-avatar i {
            font-size: 1.2rem !important;
        }

        h5 {
            font-size: 1rem;
        }

        .btn {
            padding: 0.5rem 1rem;
            font-size: 0.9rem;
        }
    }

    /* تحسين الألوان والتدرجات */
    .text-primary {
        color: #667eea !important;
    }

    .fa-comments {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    /* تحسين الأنيميشن */
    .chat-item {
        animation: fadeInUp 0.5s ease-out;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* تحسين التمرير */
    .chat-list {
        max-height: 70vh;
        overflow-y: auto;
        padding-right: 0.5rem;
    }

    .chat-list::-webkit-scrollbar {
        width: 6px;
    }

    .chat-list::-webkit-scrollbar-track {
        background: #f1f1f1;
        border-radius: 3px;
    }

    .chat-list::-webkit-scrollbar-thumb {
        background: #c1c1c1;
        border-radius: 3px;
    }

    .chat-list::-webkit-scrollbar-thumb:hover {
        background: #a8a8a8;
    }
</style>
