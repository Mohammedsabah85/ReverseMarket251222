@section Scripts {
    <script>
        let deleteRequestModal;
        let currentDeleteRequestId = null;
        let currentRequestIsApproved = false;

        document.addEventListener('DOMContentLoaded', function() {
            deleteRequestModal = new bootstrap.Modal(document.getElementById('deleteRequestModal'));
            initializeDeleteButtons();
        });

        function initializeDeleteButtons() {
            document.querySelectorAll('.delete-request-btn').forEach(btn => {
                btn.addEventListener('click', function(e) {
                    e.preventDefault();
                    currentDeleteRequestId = this.dataset.requestId;
                    currentRequestIsApproved = this.dataset.isApproved === 'true';

                    document.getElementById('deleteRequestTitle').textContent = this.dataset.requestTitle;

                    // إظهار/إخفاء تحذير الطلبات المعتمدة
                    const approvedWarning = document.getElementById('approvedWarning');
                    approvedWarning.style.display = currentRequestIsApproved ? 'block' : 'none';

                    deleteRequestModal.show();
                });
            });

            document.getElementById('confirmDeleteRequest').addEventListener('click', function() {
                if (currentDeleteRequestId) {
                    deleteRequest(currentDeleteRequestId);
                }
            });
        }

        function deleteRequest(requestId) {
            const btn = document.getElementById('confirmDeleteRequest');
            btn.disabled = true;
            btn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>جاري الحذف...';

            // Get the anti-forgery token from the hidden form
            const token = document.querySelector('#csrfTokenForm input[name="__RequestVerificationToken"]')?.value ||
                          document.querySelector('input[name="__RequestVerificationToken"]')?.value;

            if (!token) {
                showAlert('خطأ في الأمان. يرجى تحديث الصفحة والمحاولة مرة أخرى.', 'error');
                btn.disabled = false;
                btn.innerHTML = '<i class="fas fa-trash me-2"></i>حذف الطلب';
                deleteRequestModal.hide();
                return;
            }

            // Create form data
            const formData = new FormData();
            formData.append('__RequestVerificationToken', token);
            formData.append('id', requestId);

            fetch('/Requests/Delete', {
                method: 'POST',
                body: formData
            })
            .then(response => {
                if (!response.ok) {
                    throw new Error('Network response was not ok');
                }
                return response.json();
            })
            .then(data => {
                if (data.success) {
                    // Remove the card with animation
                    const card = document.querySelector(`.request-card[data-request-id="${requestId}"]`);
                    if (card) {
                        card.style.transition = 'all 0.3s ease';
                        card.style.opacity = '0';
                        card.style.transform = 'translateX(-100%)';
                        setTimeout(() => {
                            card.remove();
                            // Check if no more requests
                            if (document.querySelectorAll('.request-card').length === 0) {
                                location.reload();
                            }
                        }, 300);
                    }
                    showAlert(data.message, 'success');
                } else {
                    showAlert(data.message || 'حدث خطأ أثناء حذف الطلب', 'error');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showAlert('حدث خطأ أثناء حذف الطلب. يرجى المحاولة مرة أخرى.', 'error');
            })
            .finally(() => {
                btn.disabled = false;
                btn.innerHTML = '<i class="fas fa-trash me-2"></i>حذف الطلب';
                deleteRequestModal.hide();
            });
        }

        function showAlert(message, type = 'info') {
            document.querySelectorAll('.alert.auto-dismiss').forEach(a => a.remove());

            const icons = {
                'success': 'fa-check-circle',
                'error': 'fa-exclamation-circle',
                'warning': 'fa-exclamation-triangle',
                'info': 'fa-info-circle'
            };

            const alertDiv = document.createElement('div');
            alertDiv.className = `alert alert-${type === 'error' ? 'danger' : type} alert-dismissible fade show auto-dismiss`;
            alertDiv.style.cssText = 'position:fixed;top:20px;right:20px;z-index:9999;max-width:350px;box-shadow:0 4px 15px rgba(0,0,0,0.2);';
            alertDiv.innerHTML = `<i class="fas ${icons[type]} me-2"></i>${message}<button type="button" class="btn-close" data-bs-dismiss="alert"></button>`;

            document.body.appendChild(alertDiv);
            setTimeout(() => alertDiv.remove(), 4000);
        }
    </script>
}
