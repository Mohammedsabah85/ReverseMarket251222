@model MyRequestsViewModel
@inject IStringLocalizer<SharedResource> Localizer
@{
    ViewData["Title"] = Localizer["MyRequests"];
}

<div class="container-custom">
    <!-- Header Section -->
    <div class="row mb-4 align-items-center">
        <div class="col-lg-8">
            <div class="page-header">
                <h1 class="display-5 fw-bold text-primary mb-2">
                    <i class="fas fa-list-alt me-3"></i>
                    @Localizer["MyRequests"]
                </h1>
                <p class="text-muted mb-0">إدارة طلباتك ومتابعة حالتها</p>
            </div>
        </div>
        <div class="col-lg-4 text-end">
            <a href="@Url.Action("Create", "Requests")" class="btn btn-primary btn-lg">
                <i class="fas fa-plus me-2"></i>
                @Localizer["AddNewRequest"]
            </a>
        </div>
    </div>

    <!-- Alert Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Statistics Cards -->
    @if (Model.Requests.Any())
    {
        <div class="row mb-4">
            <div class="col-6 col-md-3 mb-3">
                <div class="stat-card bg-primary text-white">
                    <div class="stat-icon">
                        <i class="fas fa-list"></i>
                    </div>
                    <div class="stat-content">
                        <h3>@Model.Requests.Count</h3>
                        <p class="mb-0">إجمالي الطلبات</p>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-3 mb-3">
                <div class="stat-card bg-warning text-dark">
                    <div class="stat-icon">
                        <i class="fas fa-clock"></i>
                    </div>
                    <div class="stat-content">
                        <h3>@Model.Requests.Count(r => r.Status == RequestStatus.Pending || r.Status == RequestStatus.ModificationPending)</h3>
                        <p class="mb-0">قيد المراجعة</p>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-3 mb-3">
                <div class="stat-card bg-success text-white">
                    <div class="stat-icon">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <div class="stat-content">
                        <h3>@Model.Requests.Count(r => r.Status == RequestStatus.Approved)</h3>
                        <p class="mb-0">معتمد</p>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-3 mb-3">
                <div class="stat-card bg-danger text-white">
                    <div class="stat-icon">
                        <i class="fas fa-times-circle"></i>
                    </div>
                    <div class="stat-content">
                        <h3>@Model.Requests.Count(r => r.Status == RequestStatus.Rejected)</h3>
                        <p class="mb-0">مرفوض</p>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Requests List -->
    @if (Model.Requests.Any())
    {
        <div class="requests-list">
            @foreach (var request in Model.Requests)
            {
                var statusClass = request.Status switch
                {
                    RequestStatus.Approved => "success",
                    RequestStatus.Rejected => "danger",
                    RequestStatus.Postponed => "secondary",
                    RequestStatus.ModificationPending => "info",
                    _ => "warning"
                };

                var statusText = request.Status switch
                {
                    RequestStatus.Approved => "معتمد",
                    RequestStatus.Rejected => "مرفوض",
                    RequestStatus.Postponed => "مؤجل",
                    RequestStatus.ModificationPending => "تعديل قيد المراجعة",
                    _ => "قيد المراجعة"
                };

                // السماح بالتعديل والحذف لجميع الحالات
                var canEdit = true;
                var canDelete = true;
                var isApproved = request.Status == RequestStatus.Approved;

                <div class="request-card mb-4" data-request-id="@request.Id">
                    <div class="row g-0">
                        <!-- Image Column -->
                        <div class="col-md-3">
                            <div class="request-image-container">
                                @if (request.Images != null && request.Images.Any())
                                {
                                    <img src="@request.Images.First().ImagePath" class="request-image" alt="@request.Title">
                                    @if (request.Images.Count > 1)
                                    {
                                        <span class="images-count">
                                            <i class="fas fa-images me-1"></i>@request.Images.Count
                                        </span>
                                    }
                                }
                                else
                                {
                                    <div class="no-image">
                                        <i class="fas fa-image fa-3x text-muted"></i>
                                    </div>
                                }
                            </div>
                        </div>

                        <!-- Content Column -->
                        <div class="col-md-9">
                            <div class="request-content">
                                <!-- Header -->
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <div>
                                        <h5 class="request-title mb-1">@request.Title</h5>
                                        <div class="request-meta">
                                            <span class="badge bg-@statusClass me-2">
                                                @statusText
                                            </span>
                                            <span class="text-muted small">
                                                <i class="fas fa-calendar me-1"></i>
                                                @request.CreatedAt.ToString("dd/MM/yyyy")
                                            </span>
                                            @if (request.IsModified)
                                            {
                                                <span class="text-info small ms-2">
                                                    <i class="fas fa-edit me-1"></i>
                                                    تم التعديل (@request.ModificationCount مرة)
                                                </span>
                                            }
                                        </div>
                                    </div>
                                    <div class="dropdown">
                                        <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                            <i class="fas fa-ellipsis-v"></i>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end">
                                            @if (request.Status == RequestStatus.Approved)
                                            {
                                                <li>
                                                    <a class="dropdown-item" href="@Url.Action("Details", "Requests", new { id = request.Id })">
                                                        <i class="fas fa-eye me-2 text-primary"></i>
                                                        عرض الطلب
                                                    </a>
                                                </li>
                                            }
                                            @if (canEdit)
                                            {
                                                <li>
                                                    <a class="dropdown-item" href="@Url.Action("Edit", "Requests", new { id = request.Id })">
                                                        <i class="fas fa-edit me-2 text-warning"></i>
                                                        تعديل الطلب
                                                    </a>
                                                </li>
                                            }
                                            @if (canDelete)
                                            {
                                                <li><hr class="dropdown-divider"></li>
                                                <li>
                                                    <button class="dropdown-item text-danger delete-request-btn" data-request-id="@request.Id" data-request-title="@request.Title">
                                                        <i class="fas fa-trash me-2"></i>
                                                        حذف الطلب
                                                    </button>
                                                </li>
                                            }
                                        </ul>
                                    </div>
                                </div>

                                <!-- Categories -->
                                <div class="request-categories mb-2">
                                    @if (request.Category != null)
                                    {
                                        <span class="badge bg-primary me-1">@request.Category.Name</span>
                                    }
                                    @if (request.SubCategory1 != null)
                                    {
                                        <span class="badge bg-secondary me-1">@request.SubCategory1.Name</span>
                                    }
                                    @if (request.SubCategory2 != null)
                                    {
                                        <span class="badge bg-info">@request.SubCategory2.Name</span>
                                    }
                                </div>

                                <!-- Description -->
                                <p class="request-description text-muted mb-2">
                                    @(request.Description.Length > 150 ? request.Description.Substring(0, 150) + "..." : request.Description)
                                </p>

                                <!-- Location -->
                                <div class="request-location text-muted small mb-3">
                                    <i class="fas fa-map-marker-alt me-1"></i>
                                    @request.City - @request.District
                                </div>

                                <!-- Rejection Reason -->
                                @if (request.Status == RequestStatus.Rejected && !string.IsNullOrEmpty(request.RejectionReason))
                                {
                                    <div class="alert alert-danger py-2 mb-2">
                                        <i class="fas fa-exclamation-circle me-2"></i>
                                        <strong>سبب الرفض:</strong> @request.RejectionReason
                                    </div>
                                }

                                <!-- Actions -->
                                <div class="request-actions">
                                    @if (request.Status == RequestStatus.Approved)
                                    {
                                        <a href="@Url.Action("Details", "Requests", new { id = request.Id })" class="btn btn-success btn-sm">
                                            <i class="fas fa-eye me-1"></i>
                                            عرض في الموقع
                                        </a>
                                    }
                                    @if (canEdit)
                                    {
                                        <a href="@Url.Action("Edit", "Requests", new { id = request.Id })"
                                           class="btn @(isApproved ? "btn-outline-warning" : "btn-warning") btn-sm"
                                           title="@(isApproved ? "تعديل الطلب - سيحتاج موافقة الإدارة" : "تعديل الطلب")">
                                            <i class="fas fa-edit me-1"></i>
                                            تعديل
                                            @if (isApproved)
                                            {
                                                <i class="fas fa-exclamation-circle ms-1" title="سيحتاج موافقة الإدارة"></i>
                                            }
                                        </a>
                                    }
                                    @if (canDelete)
                                    {
                                        <button class="btn @(isApproved ? "btn-danger" : "btn-outline-danger") btn-sm delete-request-btn"
                                                data-request-id="@request.Id"
                                                data-request-title="@request.Title"
                                                data-is-approved="@isApproved.ToString().ToLower()">
                                            <i class="fas fa-trash me-1"></i>
                                            حذف
                                        </button>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {
            <nav aria-label="pagination" class="mt-4">
                <ul class="pagination justify-content-center">
                    @if (Model.CurrentPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" href="?page=@(Model.CurrentPage - 1)">
                                <i class="fas fa-chevron-right"></i>
                            </a>
                        </li>
                    }

                    @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" href="?page=@i">@i</a>
                        </li>
                    }

                    @if (Model.CurrentPage < Model.TotalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" href="?page=@(Model.CurrentPage + 1)">
                                <i class="fas fa-chevron-left"></i>
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        }
    }
    else
    {
        <!-- Empty State -->
        <div class="empty-state text-center py-5">
            <div class="empty-state-icon mb-4">
                <i class="fas fa-inbox fa-5x text-muted"></i>
            </div>
            <h3 class="text-muted mb-3">لا توجد طلبات حتى الآن</h3>
            <p class="text-muted mb-4">ابدأ بإضافة طلبك الأول</p>
            <a href="@Url.Action("Create", "Requests")" class="btn btn-primary btn-lg">
                <i class="fas fa-plus me-2"></i>
                أضف طلبك الأول
            </a>
        </div>
    }
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteRequestModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    تأكيد حذف الطلب
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-center">
                <i class="fas fa-trash-alt fa-4x text-danger mb-3"></i>
                <p class="mb-2">هل أنت متأكد من حذف الطلب:</p>
                <h5 id="deleteRequestTitle" class="text-primary"></h5>

                <!-- تحذير خاص للطلبات المعتمدة -->
                <div id="approvedWarning" class="alert alert-warning mt-3" style="display: none;">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>تحذير:</strong> هذا الطلب معتمد ومعروض حالياً في الموقع!
                </div>

                <p class="text-danger small mt-3">
                    <i class="fas fa-exclamation-circle me-1"></i>
                    لا يمكن التراجع عن هذا الإجراء وسيتم حذف جميع الصور المرتبطة
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteRequest">
                    <i class="fas fa-trash me-2"></i>
                    حذف الطلب
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Hidden form for CSRF token -->
<form id="csrfTokenForm" style="display: none;">
    @Html.AntiForgeryToken()
</form>

