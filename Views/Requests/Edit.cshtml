@model EditRequestViewModel
@inject IStringLocalizer<SharedResource> Localizer
@{
    ViewData["Title"] = Localizer["EditRequest"];
    var categories = ViewBag.Categories as List<Category> ?? new List<Category>();
    var subCategories1 = ViewBag.SubCategories1 as List<SubCategory1> ?? new List<SubCategory1>();
    var subCategories2 = ViewBag.SubCategories2 as List<SubCategory2> ?? new List<SubCategory2>();
}

<div class="container-custom">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card-custom">
                <!-- Header -->
                <div class="text-center mb-4">
                    <h1 class="display-6 text-primary">
                        <i class="fas fa-edit me-3"></i>
                        @Localizer["EditRequest"]
                    </h1>
                    <p class="text-muted">@Localizer["EditRequestDescription"]</p>
                </div>

                <!-- Alert Messages -->
                @if (TempData["SuccessMessage"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="fas fa-check-circle me-2"></i>
                        @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                @if (TempData["WarningMessage"] != null)
                {
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        @TempData["WarningMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
                @if (TempData["InfoMessage"] != null)
                {
                    <div class="alert alert-info alert-dismissible fade show" role="alert">
                        <i class="fas fa-info-circle me-2"></i>
                        @TempData["InfoMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }

                <form asp-action="Edit" method="post" enctype="multipart/form-data" id="editRequestForm">
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <!-- Basic Information Section -->
                    <div class="form-section">
                        <h5 class="section-title">
                            <i class="fas fa-info-circle me-2"></i>
                            @Localizer["BasicInfo"]
                        </h5>

                        <div class="row g-3">
                            <div class="col-12">
                                <label asp-for="Title" class="form-label">@Localizer["Title"] *</label>
                                <input asp-for="Title" class="form-control" placeholder="@Localizer["RequestTitleExample"]" required>
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="Description" class="form-label">@Localizer["Description"] *</label>
                                <textarea asp-for="Description" class="form-control" rows="5"
                                          placeholder="@Localizer["RequestDescriptionPlaceholder"]" required></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                                <div class="form-text">@Localizer["BetterDetailsNote"]</div>
                            </div>
                        </div>
                    </div>

                    <!-- Category Selection Section -->
                    <div class="form-section">
                        <h5 class="section-title">
                            <i class="fas fa-tags me-2"></i>
                            @Localizer["Category"]
                        </h5>

                        <div class="category-selection-container">
                            <!-- Main Category -->
                            <div class="category-step mb-4">
                                <label asp-for="CategoryId" class="form-label category-label">
                                    <i class="fas fa-folder me-2"></i>
                                    @Localizer["MainCategory"] *
                                </label>
                                <select asp-for="CategoryId" class="form-control category-select" id="categorySelect" required>
                                    <option value="">@Localizer["SelectCategory"]</option>
                                    @foreach (var category in categories)
                                    {
                                        <option value="@category.Id" selected="@(Model.CategoryId == category.Id)">@category.Name</option>
                                    }
                                </select>
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>

                            <!-- Sub Category 1 -->
                            <div class="category-step mb-4" id="subCategory1Container" style="@(subCategories1.Any() ? "" : "display: none;")">
                                <label asp-for="SubCategory1Id" class="form-label category-label">
                                    <i class="fas fa-folder-open me-2"></i>
                                    @Localizer["SubCategory1"]
                                </label>
                                <select asp-for="SubCategory1Id" class="form-control category-select" id="subCategory1Select">
                                    <option value="">@Localizer["SelectSubCategory1"]</option>
                                    @foreach (var subCat in subCategories1)
                                    {
                                        <option value="@subCat.Id" selected="@(Model.SubCategory1Id == subCat.Id)">@subCat.Name</option>
                                    }
                                </select>
                                <span asp-validation-for="SubCategory1Id" class="text-danger"></span>
                            </div>

                            <!-- Sub Category 2 -->
                            <div class="category-step mb-4" id="subCategory2Container" style="@(subCategories2.Any() ? "" : "display: none;")">
                                <label asp-for="SubCategory2Id" class="form-label category-label">
                                    <i class="fas fa-tags me-2"></i>
                                    @Localizer["SubCategory2"]
                                </label>
                                <select asp-for="SubCategory2Id" class="form-control category-select" id="subCategory2Select">
                                    <option value="">@Localizer["SelectSubCategory2"]</option>
                                    @foreach (var subCat in subCategories2)
                                    {
                                        <option value="@subCat.Id" selected="@(Model.SubCategory2Id == subCat.Id)">@subCat.Name</option>
                                    }
                                </select>
                                <span asp-validation-for="SubCategory2Id" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Location Section -->
                    <div class="form-section">
                        <h5 class="section-title">
                            <i class="fas fa-map-marker-alt me-2"></i>
                            @Localizer["LocationInfo"]
                        </h5>

                        <div class="row g-3">
                            <div class="col-md-4">
                                <label asp-for="City" class="form-label">@Localizer["City"] *</label>
                                <select asp-for="City" class="form-control" required>
                                    <option value="">@Localizer["SelectCity"]</option>
                                    <option value="Baghdad" selected="@(Model.City == "Baghdad")">@Localizer["Baghdad"]</option>
                                    <option value="Basra" selected="@(Model.City == "Basra")">@Localizer["Basra"]</option>
                                    <option value="Erbil" selected="@(Model.City == "Erbil")">@Localizer["Erbil"]</option>
                                    <option value="Najaf" selected="@(Model.City == "Najaf")">@Localizer["Najaf"]</option>
                                    <option value="Karbala" selected="@(Model.City == "Karbala")">@Localizer["Karbala"]</option>
                                    <option value="Mosul" selected="@(Model.City == "Mosul")">@Localizer["Mosul"]</option>
                                    <option value="Sulaymaniyah" selected="@(Model.City == "Sulaymaniyah")">@Localizer["Sulaymaniyah"]</option>
                                    <option value="Babylon" selected="@(Model.City == "Babylon")">@Localizer["Babylon"]</option>
                                    <option value="Dohuk" selected="@(Model.City == "Dohuk")">@Localizer["Dohuk"]</option>
                                    <option value="Kirkuk" selected="@(Model.City == "Kirkuk")">@Localizer["Kirkuk"]</option>
                                    <option value="Anbar" selected="@(Model.City == "Anbar")">@Localizer["Anbar"]</option>
                                    <option value="Diyala" selected="@(Model.City == "Diyala")">@Localizer["Diyala"]</option>
                                    <option value="Saladin" selected="@(Model.City == "Saladin")">@Localizer["Saladin"]</option>
                                    <option value="Wasit" selected="@(Model.City == "Wasit")">@Localizer["Wasit"]</option>
                                    <option value="ThiQar" selected="@(Model.City == "ThiQar")">@Localizer["ThiQar"]</option>
                                    <option value="Muthanna" selected="@(Model.City == "Muthanna")">@Localizer["Muthanna"]</option>
                                    <option value="Qadisiyyah" selected="@(Model.City == "Qadisiyyah")">@Localizer["Qadisiyyah"]</option>
                                    <option value="Maysan" selected="@(Model.City == "Maysan")">@Localizer["Maysan"]</option>
                                </select>
                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="District" class="form-label">@Localizer["District"] *</label>
                                <input asp-for="District" class="form-control" placeholder="@Localizer["DistrictExample"]" required>
                                <span asp-validation-for="District" class="text-danger"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="Location" class="form-label">@Localizer["DetailedAddress"]</label>
                                <input asp-for="Location" class="form-control" placeholder="@Localizer["AddressOptional"]">
                                <span asp-validation-for="Location" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <!-- Current Images Section -->
                    <div class="form-section">
                        <h5 class="section-title">
                            <i class="fas fa-images me-2"></i>
                            @Localizer["CurrentImages"]
                        </h5>

                        @if (Model.ExistingImages.Any())
                        {
                            <div class="row g-3" id="existingImagesContainer">
                                @foreach (var image in Model.ExistingImages)
                                {
                                    <div class="col-6 col-md-4 col-lg-3 existing-image-item" data-image-id="@image.Id">
                                        <div class="image-card">
                                            <img src="@image.ImagePath" class="img-fluid" alt="صورة الطلب">
                                            <div class="image-overlay">
                                                <button type="button" class="btn btn-danger btn-sm delete-image-btn"
                                                        data-image-id="@image.Id" title="حذف الصورة">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                                <a href="@image.ImagePath" target="_blank" class="btn btn-light btn-sm" title="عرض بالحجم الكامل">
                                                    <i class="fas fa-expand"></i>
                                                </a>
                                            </div>
                                            <input type="hidden" name="ImagesToDelete" value="" class="image-delete-input" />
                                        </div>
                                    </div>
                                }
                            </div>
                            <div id="noImagesMessage" class="alert alert-info mt-3" style="display: none;">
                                <i class="fas fa-info-circle me-2"></i>
                                لا توجد صور حالياً. يمكنك رفع صور جديدة.
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle me-2"></i>
                                لا توجد صور مرفقة بهذا الطلب
                            </div>
                        }

                        <div class="mt-3">
                            <small class="text-muted">
                                <i class="fas fa-info-circle me-1"></i>
                                عدد الصور الحالية: <span id="currentImageCount">@Model.ExistingImages.Count</span> من 5
                            </small>
                        </div>
                    </div>

                    <!-- New Images Upload Section -->
                    <div class="form-section">
                        <h5 class="section-title">
                            <i class="fas fa-cloud-upload-alt me-2"></i>
                            @Localizer["AddNewImages"]
                        </h5>

                        <div class="upload-area">
                            <input type="file" name="NewImages" id="newImages" class="form-control d-none"
                                   multiple accept=".jpg,.jpeg,.png,.gif,.webp">

                            <div class="upload-zone" id="uploadZone">
                                <div class="upload-content">
                                    <i class="fas fa-cloud-upload-alt fa-3x text-muted mb-3"></i>
                                    <h5 class="text-muted">@Localizer["ClickToUpload"]</h5>
                                    <p class="text-muted small mb-0">@Localizer["OrDragImages"]</p>
                                    <small class="text-muted d-block mt-2">
                                        JPG, PNG, GIF, WEBP - الحد الأقصى 5 ميجابايت لكل صورة
                                    </small>
                                    <div class="mt-2">
                                        <span class="badge bg-info" id="remainingImagesCount">
                                            يمكنك رفع @(5 - Model.ExistingImages.Count) صور إضافية
                                        </span>
                                    </div>
                                </div>
                            </div>

                            <!-- New Images Preview -->
                            <div id="newImagePreview" class="row g-2 mt-3"></div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="form-actions">
                        <div class="row">
                            <div class="col-md-6 mb-3 mb-md-0">
                                <a href="@Url.Action("MyRequests")" class="btn btn-outline-secondary btn-lg w-100">
                                    <i class="fas fa-arrow-right me-2"></i>
                                    @Localizer["Cancel"]
                                </a>
                            </div>
                            <div class="col-md-6">
                                <button type="submit" class="btn btn-primary btn-lg w-100" id="submitBtn">
                                    <i class="fas fa-save me-2"></i>
                                    @Localizer["SaveChanges"]
                                </button>
                            </div>
                        </div>
                        <div class="text-center mt-3">
                            <small class="text-muted">
                                <i class="fas fa-info-circle me-1"></i>
                                @Localizer["ModificationReviewNote"]
                            </small>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteImageModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    تأكيد حذف الصورة
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body text-center">
                <img id="deleteImagePreview" src="" class="img-fluid rounded mb-3" style="max-height: 200px;">
                <p>هل أنت متأكد من حذف هذه الصورة؟</p>
                <p class="text-danger small">لا يمكن التراجع عن هذا الإجراء</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteImage">
                    <i class="fas fa-trash me-2"></i>
                    حذف الصورة
                </button>
            </div>
        </div>
    </div>
</div>

