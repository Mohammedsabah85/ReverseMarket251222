@section Scripts {
    <script>
        // ==========================================
        // Variables
        // ==========================================
        let newUploadedFiles = [];
        let existingImagesCount = @Model.ExistingImages.Count;
        let imagesToDelete = [];
        const maxFiles = 5;
        const maxFileSize = 5 * 1024 * 1024;
        const allowedTypes = ['image/jpeg', 'image/jpg', 'image/png', 'image/gif', 'image/webp'];
        let deleteImageModal;
        let currentDeleteImageId = null;

        document.addEventListener('DOMContentLoaded', function() {
            deleteImageModal = new bootstrap.Modal(document.getElementById('deleteImageModal'));
            initializeImageUpload();
            initializeCategoryDropdowns();
            initializeDragAndDrop();
            initializeDeleteButtons();
            initializeFormSubmit();
            updateRemainingCount();
        });

        // ==========================================
        // Image Delete Handling
        // ==========================================
        function initializeDeleteButtons() {
            document.querySelectorAll('.delete-image-btn').forEach(btn => {
                btn.addEventListener('click', function(e) {
                    e.preventDefault();
                    const imageId = this.dataset.imageId;
                    const imageItem = this.closest('.existing-image-item');
                    const imageSrc = imageItem.querySelector('img').src;

                    currentDeleteImageId = imageId;
                    document.getElementById('deleteImagePreview').src = imageSrc;
                    deleteImageModal.show();
                });
            });

            document.getElementById('confirmDeleteImage').addEventListener('click', function() {
                if (currentDeleteImageId) {
                    markImageForDeletion(currentDeleteImageId);
                    deleteImageModal.hide();
                }
            });
        }

        function markImageForDeletion(imageId) {
            const imageItem = document.querySelector(`.existing-image-item[data-image-id="${imageId}"]`);
            if (imageItem) {
                if (imageItem.classList.contains('marked-for-deletion')) {
                    // إلغاء الحذف
                    imageItem.classList.remove('marked-for-deletion');
                    imagesToDelete = imagesToDelete.filter(id => id !== imageId);
                    imageItem.querySelector('.image-delete-input').value = '';
                    existingImagesCount++;
                } else {
                    // تحديد للحذف
                    imageItem.classList.add('marked-for-deletion');
                    imagesToDelete.push(imageId);
                    imageItem.querySelector('.image-delete-input').value = imageId;
                    existingImagesCount--;
                }
                updateRemainingCount();
            }
        }

        // ==========================================
        // New Image Upload
        // ==========================================
        function initializeImageUpload() {
            const imageInput = document.getElementById('newImages');
            const uploadZone = document.getElementById('uploadZone');

            uploadZone.addEventListener('click', function() {
                if (getRemainingCount() > 0) {
                    imageInput.click();
                } else {
                    showAlert('تم الوصول للحد الأقصى من الصور', 'warning');
                }
            });

            imageInput.addEventListener('change', function(e) {
                handleNewImageSelection(e.target.files);
            });
        }

        function initializeDragAndDrop() {
            const uploadZone = document.getElementById('uploadZone');

            ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
                uploadZone.addEventListener(eventName, preventDefaults, false);
                document.body.addEventListener(eventName, preventDefaults, false);
            });

            ['dragenter', 'dragover'].forEach(eventName => {
                uploadZone.addEventListener(eventName, () => {
                    if (getRemainingCount() > 0) {
                        uploadZone.classList.add('dragover');
                    }
                }, false);
            });

            ['dragleave', 'drop'].forEach(eventName => {
                uploadZone.addEventListener(eventName, () => uploadZone.classList.remove('dragover'), false);
            });

            uploadZone.addEventListener('drop', (e) => {
                if (getRemainingCount() > 0) {
                    handleNewImageSelection(e.dataTransfer.files);
                }
            }, false);
        }

        function preventDefaults(e) {
            e.preventDefault();
            e.stopPropagation();
        }

        function handleNewImageSelection(files) {
            const remaining = getRemainingCount();

            Array.from(files).forEach(file => {
                if (newUploadedFiles.length >= remaining) {
                    showAlert(`يمكنك رفع ${remaining} صور إضافية فقط`, 'warning');
                    return;
                }

                if (!allowedTypes.includes(file.type)) {
                    showAlert(`نوع غير مدعوم: ${file.name}`, 'error');
                    return;
                }

                if (file.size > maxFileSize) {
                    showAlert(`حجم كبير: ${file.name}`, 'error');
                    return;
                }

                if (!newUploadedFiles.some(f => f.name === file.name && f.size === file.size)) {
                    newUploadedFiles.push(file);
                }
            });

            rebuildNewImagePreview();
            updateFileInput();
            updateRemainingCount();
        }

        function rebuildNewImagePreview() {
            const container = document.getElementById('newImagePreview');
            container.innerHTML = '';

            newUploadedFiles.forEach((file, index) => {
                const reader = new FileReader();
                reader.onload = (e) => {
                    const col = document.createElement('div');
                    col.className = 'col-4 col-md-3';
                    col.innerHTML = `
                        <div class="new-image-preview-item">
                            <img src="${e.target.result}" class="img-fluid">
                            <button type="button" class="btn btn-danger btn-sm remove-btn" onclick="removeNewImage(${index})">
                                <i class="fas fa-times"></i>
                            </button>
                            <div class="image-info text-truncate">${file.name}</div>
                        </div>
                    `;
                    container.appendChild(col);
                };
                reader.readAsDataURL(file);
            });
        }

        function removeNewImage(index) {
            newUploadedFiles.splice(index, 1);
            rebuildNewImagePreview();
            updateFileInput();
            updateRemainingCount();
        }

        function updateFileInput() {
            const dt = new DataTransfer();
            newUploadedFiles.forEach(file => dt.items.add(file));
            document.getElementById('newImages').files = dt.files;
        }

        function getRemainingCount() {
            return maxFiles - existingImagesCount - newUploadedFiles.length + imagesToDelete.length;
        }

        function updateRemainingCount() {
            const remaining = getRemainingCount();
            const badge = document.getElementById('remainingImagesCount');
            const uploadZone = document.getElementById('uploadZone');
            const currentCountSpan = document.getElementById('currentImageCount');

            currentCountSpan.textContent = existingImagesCount - imagesToDelete.length;

            if (remaining <= 0) {
                badge.textContent = 'تم الوصول للحد الأقصى من الصور';
                badge.className = 'badge bg-danger';
                uploadZone.classList.add('disabled');
            } else {
                badge.textContent = `يمكنك رفع ${remaining} صور إضافية`;
                badge.className = 'badge bg-info';
                uploadZone.classList.remove('disabled');
            }

            // Check if all images are deleted
            const totalImages = existingImagesCount - imagesToDelete.length + newUploadedFiles.length;
            const noImagesMsg = document.getElementById('noImagesMessage');
            if (noImagesMsg) {
                noImagesMsg.style.display = totalImages === 0 ? 'block' : 'none';
            }
        }

        // ==========================================
        // Category Dropdowns
        // ==========================================
        function initializeCategoryDropdowns() {
            const categorySelect = document.getElementById('categorySelect');
            const subCategory1Select = document.getElementById('subCategory1Select');

            if (categorySelect) {
                categorySelect.addEventListener('change', function() {
                    const categoryId = this.value;
                    const subCategory1Container = document.getElementById('subCategory1Container');
                    const subCategory2Container = document.getElementById('subCategory2Container');

                    if (categoryId) {
                        loadSubCategories1(categoryId);
                        subCategory1Container.style.display = 'block';
                    } else {
                        subCategory1Container.style.display = 'none';
                        subCategory2Container.style.display = 'none';
                    }

                    resetSubCategory2();
                });
            }

            if (subCategory1Select) {
                subCategory1Select.addEventListener('change', function() {
                    const subCategory1Id = this.value;
                    const subCategory2Container = document.getElementById('subCategory2Container');

                    if (subCategory1Id) {
                        loadSubCategories2(subCategory1Id);
                        subCategory2Container.style.display = 'block';
                    } else {
                        subCategory2Container.style.display = 'none';
                        resetSubCategory2();
                    }
                });
            }
        }

        function loadSubCategories1(categoryId) {
            const select = document.getElementById('subCategory1Select');
            select.innerHTML = '<option value="">جاري التحميل...</option>';

            fetch(`/Requests/GetSubCategories1?categoryId=${categoryId}`)
                .then(r => r.json())
                .then(data => {
                    select.innerHTML = '<option value="">@Localizer["SelectSubCategory1"]</option>';
                    data.forEach(item => {
                        select.innerHTML += `<option value="${item.id}">${item.name}</option>`;
                    });
                })
                .catch(() => {
                    select.innerHTML = '<option value="">خطأ في التحميل</option>';
                });
        }

        function loadSubCategories2(subCategory1Id) {
            const select = document.getElementById('subCategory2Select');
            select.innerHTML = '<option value="">جاري التحميل...</option>';

            fetch(`/Requests/GetSubCategories2?subCategory1Id=${subCategory1Id}`)
                .then(r => r.json())
                .then(data => {
                    select.innerHTML = '<option value="">@Localizer["SelectSubCategory2"]</option>';
                    if (data.length > 0) {
                        data.forEach(item => {
                            select.innerHTML += `<option value="${item.id}">${item.name}</option>`;
                        });
                    } else {
                        select.innerHTML = '<option value="">لا توجد فئات فرعية</option>';
                    }
                })
                .catch(() => {
                    select.innerHTML = '<option value="">خطأ في التحميل</option>';
                });
        }

        function resetSubCategory2() {
            const select = document.getElementById('subCategory2Select');
            select.innerHTML = '<option value="">@Localizer["SelectSubCategory2"]</option>';
        }

        // ==========================================
        // Form Submit
        // ==========================================
        function initializeFormSubmit() {
            const form = document.getElementById('editRequestForm');
            const submitBtn = document.getElementById('submitBtn');

            form.addEventListener('submit', function(e) {
                // Add images to delete as hidden inputs
                imagesToDelete.forEach(imageId => {
                    const existingInput = form.querySelector(`input[name="ImagesToDelete"][value="${imageId}"]`);
                    if (!existingInput) {
                        const input = document.createElement('input');
                        input.type = 'hidden';
                        input.name = 'ImagesToDelete';
                        input.value = imageId;
                        form.appendChild(input);
                    }
                });

                submitBtn.disabled = true;
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>جاري الحفظ...';

                setTimeout(() => {
                    submitBtn.disabled = false;
                    submitBtn.innerHTML = '<i class="fas fa-save me-2"></i>@Localizer["SaveChanges"]';
                }, 15000);
            });
        }

        // ==========================================
        // Alerts
        // ==========================================
        function showAlert(message, type = 'info') {
            document.querySelectorAll('.alert.auto-dismiss').forEach(a => a.remove());

            const icons = {
                'success': 'fa-check-circle',
                'error': 'fa-exclamation-circle',
                'warning': 'fa-exclamation-triangle',
                'info': 'fa-info-circle'
            };

            const alertDiv = document.createElement('div');
            alertDiv.className = `alert alert-${type === 'error' ? 'danger' : type} alert-dismissible fade show auto-dismiss`;
            alertDiv.style.cssText = 'position:fixed;top:20px;right:20px;z-index:9999;max-width:350px;';
            alertDiv.innerHTML = `<i class="fas ${icons[type]} me-2"></i>${message}<button type="button" class="btn-close" data-bs-dismiss="alert"></button>`;

            document.body.appendChild(alertDiv);
            setTimeout(() => alertDiv.remove(), 4000);
        }
    </script>
}
