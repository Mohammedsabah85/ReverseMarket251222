        font-weight: 600;
        font-size: 1.1rem;
    }

    .category-selection-container {
        background: #f8f9fa;
        border-radius: 15px;
        padding: 1.5rem;
    }

    .category-step {
        background: white;
        border-radius: 10px;
        padding: 1rem;
        border: 1px solid #e9ecef;
        transition: all 0.3s ease;
    }

