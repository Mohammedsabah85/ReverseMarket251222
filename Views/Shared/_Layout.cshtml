                                        @if (isBuyer)
                                        {
                                            <li>
                                                <a class="dropdown-item" href="/Requests/Create">
                                                    <i class="fas fa-plus @(direction == "rtl" ? "ms-2" : "me-2")"></i>
                                                    @Localizer["AddRequest"]
