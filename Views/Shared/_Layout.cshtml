                                        <li>
                                            <a class="dropdown-item" href="/Notifications">
                                                <i class="fas fa-bell @(direction == "rtl" ? "ms-2" : "me-2")"></i>
                                                @Localizer["Notifications"]
                                            </a>
                                        </li>
                                    }
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-action="Logout" asp-controller="Account" method="post">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="dropdown-item text-danger">
                                                <i class="fas fa-sign-out-alt @(direction == "rtl" ? "ms-2" : "me-2")"></i>
                                                @Localizer["Logout"]
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            @* ✅ زر "إضافة طلب" فقط لغير المسجلين *@
                            <li class="nav-item">
                                <a class="nav-link" href="/Account/Login">
                                    <i class="fas fa-plus @(direction == "rtl" ? "ms-2" : "me-2")"></i>
                                    @Localizer["AddRequest"]
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-outline-custom" href="/Account/Login">
                                    <i class="fas fa-sign-in-alt"></i>
                                    <span>@Localizer["Login"]</span>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="fade-in">
        <!-- رسائل التنبيه -->
        <div class="messages-container">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="container mt-3">
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <i class="fas fa-check-circle @(direction == "rtl" ? "ms-2" : "me-2")"></i>
                        <strong>@Localizer["Success"]!</strong> @TempData["SuccessMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="container mt-3">
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-circle @(direction == "rtl" ? "ms-2" : "me-2")"></i>
                        <strong>@Localizer["Error"]!</strong> @TempData["ErrorMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                </div>
            }

            @if (TempData["WarningMessage"] != null)
            {
                <div class="container mt-3">
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                        <i class="fas fa-exclamation-triangle @(direction == "rtl" ? "ms-2" : "me-2")"></i>
                        <strong>@Localizer["Warning"]!</strong> @TempData["WarningMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                </div>
            }

            @if (TempData["InfoMessage"] != null)
            {
                <div class="container mt-3">
                    <div class="alert alert-info alert-dismissible fade show" role="alert">
                        <i class="fas fa-info-circle @(direction == "rtl" ? "ms-2" : "me-2")"></i>
                        <strong>@Localizer["Info"]!</strong> @TempData["InfoMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                </div>
            }
        </div>

        @RenderBody()
    </main>

