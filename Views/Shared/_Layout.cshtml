        <ul class="nav">
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" && ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")" href="/">
                    <i class="fas fa-home"></i>
                    <span>@Localizer["Home"]</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Requests" ? "active" : "")" href="/Requests">
                    <i class="fas fa-list"></i>
                    <span>@Localizer["Requests"]</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Stores" ? "active" : "")" href="/Stores">
                    <i class="fas fa-store"></i>
                    <span>@Localizer["Stores"]</span>
                </a>
            </li>
            @if (isLoggedIn)
            {
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Profile" ? "active" : "")" href="/Profile">
                        <i class="fas fa-user"></i>
                        <span>@Localizer["Profile"]</span>
                    </a>
                </li>
            }
            else
            {
                <li class="nav-item">
                    <a class="nav-link" href="/Account/Login">
                        <i class="fas fa-sign-in-alt"></i>
                        <span>@Localizer["Login"]</span>
                    </a>
                </li>
            }
        </ul>
    </nav>

    <!-- زر العودة للأعلى -->
    <button id="backToTop" class="btn btn-custom position-fixed" style="bottom: 5rem; @(direction == "rtl" ? "left" : "right"): 1rem; z-index: 1000; display: none; border-radius: 50%; width: 45px; height: 45px;">
        <i class="fas fa-arrow-up"></i>
    </button>

    <!-- JavaScript -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
            integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.0/signalr.min.js"></script>
    <script src="~/js/multi-select.js" asp-append-version="true"></script>
    <script src="~/js/site-unified.js" asp-append-version="true"></script>
    <script src="~/js/notification-manager.js" asp-append-version="true"></script>
    <!-- ملف JavaScript الموحد للتنقل - يجب أن يكون آخر ملف -->
    <script src="~/js/unified-nav-v9.js"></script>
@*     <script src="~/js/unified-nav.js" asp-append-version="true"></script> *@

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
