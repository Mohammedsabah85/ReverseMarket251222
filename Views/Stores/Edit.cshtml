@using ReverseMarket.Models.ViewModels
@model EditStoreProfileViewModel
@inject IStringLocalizer<SharedResource> Localizer
@{
    ViewData["Title"] = Localizer["EditStore"];
    var categories = ViewBag.Categories as List<Category> ?? new List<Category>();
}

<div class="container-custom">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <!-- Header -->
            <div class="page-header text-center mb-4">
                <h1 class="display-5 fw-bold text-primary">
                    <i class="fas fa-store me-3"></i>
                    @Localizer["EditStore"]
                </h1>
                <p class="text-muted">@Localizer["ManageStoreInfo"]</p>
            </div>

            <!-- Alert Messages -->
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle me-2"></i>
                    @TempData["SuccessMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <!-- Store Status Card -->
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-auto">
                            @if (!string.IsNullOrEmpty(Model.CurrentProfileImage))
                            {
                                <img src="@Model.CurrentProfileImage" class="rounded-circle store-avatar" alt="@Model.StoreName">
                            }
                            else
                            {
                                <div class="store-avatar-placeholder">
                                    <i class="fas fa-store fa-2x"></i>
                                </div>
                            }
                        </div>
                        <div class="col">
                            <h4 class="mb-1">@Model.StoreName</h4>
                            <div class="d-flex flex-wrap gap-2">
                                @if (Model.IsStoreApproved)
                                {
                                    <span class="badge bg-success">
                                        <i class="fas fa-check-circle me-1"></i>
                                        متجر معتمد
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">
                                        <i class="fas fa-clock me-1"></i>
                                        قيد المراجعة
                                    </span>
                                }
                                @if (Model.HasPendingUrlChanges)
                                {
                                    <span class="badge bg-info">
                                        <i class="fas fa-link me-1"></i>
                                        روابط معلقة
                                    </span>
                                }
                                <span class="text-muted small">
                                    <i class="fas fa-calendar me-1"></i>
                                    عضو منذ @Model.CreatedAt.ToString("MMMM yyyy")
                                </span>
                            </div>
                        </div>
                        <div class="col-auto">
                            <a href="@Url.Action("Details", "Stores", new { id = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value })"
                               class="btn btn-outline-primary" target="_blank">
                                <i class="fas fa-eye me-2"></i>
                                معاينة المتجر
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Edit Form -->
            <form asp-action="Edit" method="post" enctype="multipart/form-data" id="editStoreForm">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Basic Info Section -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white border-bottom">
                        <h5 class="mb-0 text-primary">
                            <i class="fas fa-info-circle me-2"></i>
                            @Localizer["BasicInfo"]
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label asp-for="StoreName" class="form-label">@Localizer["StoreName"] *</label>
                                <input asp-for="StoreName" class="form-control" placeholder="مثال: متجر الإلكترونيات" required>
                                <span asp-validation-for="StoreName" class="text-danger"></span>
                            </div>

                            <div class="col-md-6">
                                <label class="form-label">رقم الهاتف</label>
                                <input type="text" class="form-control" value="@Model.PhoneNumber" readonly disabled>
                                <small class="text-muted">لتغيير رقم الهاتف تواصل مع الدعم</small>
                            </div>

                            <div class="col-12">
                                <label asp-for="StoreDescription" class="form-label">@Localizer["StoreDescription"]</label>
                                <textarea asp-for="StoreDescription" class="form-control" rows="4"
                                          placeholder="اكتب وصفاً مختصراً عن متجرك والخدمات التي تقدمها..."></textarea>
                                <span asp-validation-for="StoreDescription" class="text-danger"></span>
                                <div class="form-text">
                                    <span id="descriptionCounter">0</span>/1000 حرف
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Store Image Section -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white border-bottom">
                        <h5 class="mb-0 text-primary">
                            <i class="fas fa-camera me-2"></i>
                            @Localizer["StoreImage"]
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-auto">
                                <div class="current-image-container" id="currentImageContainer">
                                    @if (!string.IsNullOrEmpty(Model.CurrentProfileImage))
                                    {
                                        <img src="@Model.CurrentProfileImage" class="current-image" id="currentImage" alt="صورة المتجر">
                                        <button type="button" class="btn btn-danger btn-sm delete-current-image" id="deleteCurrentImageBtn">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    }
                                    else
                                    {
                                        <div class="no-image-placeholder" id="noImagePlaceholder">
                                            <i class="fas fa-store fa-3x text-muted"></i>
                                            <p class="small text-muted mt-2 mb-0">لا توجد صورة</p>
                                        </div>
                                    }
                                </div>
                            </div>
                            <div class="col">
                                <div class="upload-new-image">
                                    <label for="newProfileImage" class="form-label">رفع صورة جديدة</label>
                                    <input asp-for="NewProfileImage" type="file" class="form-control" id="newProfileImage"
                                           accept=".jpg,.jpeg,.png,.gif,.webp">
                                    <small class="text-muted">JPG, PNG, GIF, WEBP - الحد الأقصى 5 ميجابايت</small>
                                </div>
                                <div id="newImagePreview" class="mt-3" style="display: none;">
                                    <img src="" class="new-image-preview" alt="معاينة">
                                    <button type="button" class="btn btn-sm btn-outline-danger mt-2" id="removeNewImage">
                                        <i class="fas fa-times me-1"></i>
                                        إزالة
                                    </button>
                                </div>
                            </div>
                        </div>
                        <input type="hidden" asp-for="RemoveCurrentImage" id="removeCurrentImageInput" value="false">
                    </div>
                </div>

                <!-- Location Section -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white border-bottom">
                        <h5 class="mb-0 text-primary">
                            <i class="fas fa-map-marker-alt me-2"></i>
                            @Localizer["LocationInfo"]
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label asp-for="City" class="form-label">@Localizer["City"] *</label>
                                <select asp-for="City" class="form-select" required>
                                    <option value="">@Localizer["SelectCity"]</option>
                                    <option value="Baghdad">@Localizer["Baghdad"]</option>
                                    <option value="Basra">@Localizer["Basra"]</option>
                                    <option value="Erbil">@Localizer["Erbil"]</option>
                                    <option value="Najaf">@Localizer["Najaf"]</option>
                                    <option value="Karbala">@Localizer["Karbala"]</option>
                                    <option value="Mosul">@Localizer["Mosul"]</option>
                                    <option value="Sulaymaniyah">@Localizer["Sulaymaniyah"]</option>
                                    <option value="Babylon">@Localizer["Babylon"]</option>
                                    <option value="Dohuk">@Localizer["Dohuk"]</option>
                                    <option value="Kirkuk">@Localizer["Kirkuk"]</option>
                                    <option value="Anbar">@Localizer["Anbar"]</option>
                                    <option value="Diyala">@Localizer["Diyala"]</option>
                                    <option value="Saladin">@Localizer["Saladin"]</option>
                                    <option value="Wasit">@Localizer["Wasit"]</option>
                                    <option value="ThiQar">@Localizer["ThiQar"]</option>
                                    <option value="Muthanna">@Localizer["Muthanna"]</option>
                                    <option value="Qadisiyyah">@Localizer["Qadisiyyah"]</option>
                                    <option value="Maysan">@Localizer["Maysan"]</option>
                                </select>
                                <span asp-validation-for="City" class="text-danger"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="District" class="form-label">@Localizer["District"] *</label>
                                <input asp-for="District" class="form-control" placeholder="مثال: المنصور" required>
                                <span asp-validation-for="District" class="text-danger"></span>
                            </div>

                            <div class="col-md-4">
                                <label asp-for="Location" class="form-label">@Localizer["DetailedAddress"]</label>
                                <input asp-for="Location" class="form-control" placeholder="العنوان التفصيلي (اختياري)">
                                <span asp-validation-for="Location" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Website Links Section -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white border-bottom">
                        <h5 class="mb-0 text-primary">
                            <i class="fas fa-link me-2"></i>
                            @Localizer["WebsiteLinks"]
                        </h5>
                    </div>
                    <div class="card-body">
                        @if (Model.HasPendingUrlChanges)
                        {
                            <div class="alert alert-info mb-3">
                                <i class="fas fa-info-circle me-2"></i>
                                لديك روابط في انتظار موافقة الإدارة. الروابط الجديدة ستظهر بعد الموافقة عليها.
                            </div>
                        }

                        <div class="row g-3">
                            <!-- Website URL 1 -->
                            <div class="col-12">
                                <div class="url-input-group">
                                    <label asp-for="WebsiteUrl1" class="form-label">
                                        @Localizer["WebsiteUrl1"]
                                        @if (Model.Url1Status == "pending")
                                        {
                                            <span class="badge bg-warning text-dark ms-2">قيد المراجعة</span>
                                        }
                                        else if (Model.Url1Status == "approved")
                                        {
                                            <span class="badge bg-success ms-2">معتمد</span>
                                        }
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fas fa-globe"></i></span>
                                        <input asp-for="WebsiteUrl1" class="form-control" placeholder="https://example.com">
                                    </div>
                                    <span asp-validation-for="WebsiteUrl1" class="text-danger"></span>
                                    @if (!string.IsNullOrEmpty(Model.PendingWebsiteUrl1))
                                    {
                                        <small class="text-info d-block mt-1">
                                            <i class="fas fa-clock me-1"></i>
                                            الرابط المعلق: @Model.PendingWebsiteUrl1
                                        </small>
                                    }
                                </div>
                            </div>

                            <!-- Website URL 2 -->
                            <div class="col-12">
                                <div class="url-input-group">
                                    <label asp-for="WebsiteUrl2" class="form-label">
                                        @Localizer["WebsiteUrl2"]
                                        @if (Model.Url2Status == "pending")
                                        {
                                            <span class="badge bg-warning text-dark ms-2">قيد المراجعة</span>
                                        }
                                        else if (Model.Url2Status == "approved")
                                        {
                                            <span class="badge bg-success ms-2">معتمد</span>
                                        }
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fab fa-facebook"></i></span>
                                        <input asp-for="WebsiteUrl2" class="form-control" placeholder="https://facebook.com/yourpage">
                                    </div>
                                    <span asp-validation-for="WebsiteUrl2" class="text-danger"></span>
                                    @if (!string.IsNullOrEmpty(Model.PendingWebsiteUrl2))
                                    {
                                        <small class="text-info d-block mt-1">
                                            <i class="fas fa-clock me-1"></i>
                                            الرابط المعلق: @Model.PendingWebsiteUrl2
                                        </small>
                                    }
                                </div>
                            </div>

                            <!-- Website URL 3 -->
                            <div class="col-12">
                                <div class="url-input-group">
                                    <label asp-for="WebsiteUrl3" class="form-label">
                                        @Localizer["WebsiteUrl3"]
                                        @if (Model.Url3Status == "pending")
                                        {
                                            <span class="badge bg-warning text-dark ms-2">قيد المراجعة</span>
                                        }
                                        else if (Model.Url3Status == "approved")
                                        {
                                            <span class="badge bg-success ms-2">معتمد</span>
                                        }
                                    </label>
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="fab fa-instagram"></i></span>
                                        <input asp-for="WebsiteUrl3" class="form-control" placeholder="https://instagram.com/yourpage">
                                    </div>
                                    <span asp-validation-for="WebsiteUrl3" class="text-danger"></span>
                                    @if (!string.IsNullOrEmpty(Model.PendingWebsiteUrl3))
                                    {
                                        <small class="text-info d-block mt-1">
                                            <i class="fas fa-clock me-1"></i>
                                            الرابط المعلق: @Model.PendingWebsiteUrl3
                                        </small>
                                    }
                                </div>
                            </div>
                        </div>

                        <div class="alert alert-light border mt-3 mb-0">
                            <i class="fas fa-shield-alt text-primary me-2"></i>
                            <small>تغيير الروابط يحتاج موافقة الإدارة لضمان أمان المستخدمين</small>
                        </div>
                    </div>
                </div>

                <!-- Store Categories Section -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white border-bottom">
                        <h5 class="mb-0 text-primary">
                            <i class="fas fa-tags me-2"></i>
                            @Localizer["StoreSpecializations"]
                        </h5>
                    </div>
                    <div class="card-body">
                        <!-- Current Categories -->
                        @if (Model.CurrentStoreCategories?.Any() == true)
                        {
                            <div class="mb-4">
                                <label class="form-label">التخصصات الحالية:</label>
                                <div class="current-categories" id="currentCategoriesContainer">
                                    @foreach (var cat in Model.CurrentStoreCategories)
                                    {
                                        <div class="category-badge" data-category-id="@cat.Id">
                                            <span>@cat.FullPath</span>
                                            <button type="button" class="remove-category-btn" onclick="removeCategory(@cat.Id)">
                                                <i class="fas fa-times"></i>
                                            </button>
                                        </div>
                                    }
                                </div>
                            </div>
                        }

                        <!-- Add New Categories -->
                        <div class="add-category-section">
                            <label class="form-label">إضافة تخصصات جديدة:</label>
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <select class="form-select" id="categorySelect">
                                        <option value="">اختر الفئة الرئيسية</option>
                                        @foreach (var category in categories)
                                        {
                                            <option value="@category.Id">@category.Name</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-4">
                                    <select class="form-select" id="subCategory1Select" disabled>
                                        <option value="">اختر الفئة الفرعية</option>
                                    </select>
                                </div>
                                <div class="col-md-4">
                                    <select class="form-select" id="subCategory2Select" disabled>
                                        <option value="">اختر التخصص</option>
                                    </select>
                                </div>
                            </div>
                            <button type="button" class="btn btn-outline-primary mt-3" id="addCategoryBtn" disabled>
                                <i class="fas fa-plus me-2"></i>
                                إضافة التخصص
                            </button>
                        </div>

                        <!-- Selected Categories (hidden input) -->
                        <input type="hidden" asp-for="StoreCategories" id="storeCategoriesInput">

                        <!-- Selected Categories Display -->
                        <div class="selected-categories mt-4" id="selectedCategoriesDisplay" style="display: none;">
                            <label class="form-label">التخصصات المختارة للإضافة:</label>
                            <div id="selectedCategoriesList" class="current-categories"></div>
                        </div>
                    </div>
                </div>

                <!-- Submit Buttons -->
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3 mb-md-0">
                                <a href="@Url.Action("Index", "Profile")" class="btn btn-outline-secondary btn-lg w-100">
                                    <i class="fas fa-arrow-right me-2"></i>
                                    @Localizer["Cancel"]
                                </a>
                            </div>
                            <div class="col-md-6">
                                <button type="submit" class="btn btn-primary btn-lg w-100" id="submitBtn">
                                    <i class="fas fa-save me-2"></i>
                                    @Localizer["SaveChanges"]
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .store-avatar {
        width: 80px;
        height: 80px;
        object-fit: cover;
    }

    .store-avatar-placeholder {
        width: 80px;
        height: 80px;
        background: #f8f9fa;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #6c757d;
    }

    .current-image-container {
        position: relative;
        width: 150px;
        height: 150px;
    }

