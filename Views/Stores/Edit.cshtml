</style>

@section Scripts {
    <script>
        let selectedCategories = [];
        const existingCategoryIds = @Html.Raw(Json.Serialize(Model.CurrentStoreCategories?.Select(c => c.SubCategory2Id).ToList() ?? new List<int?>()));

        document.addEventListener('DOMContentLoaded', function() {
            initializeDescriptionCounter();
            initializeImageUpload();
            initializeCategorySelection();
            initializeFormSubmit();
        });

        // Description counter
        function initializeDescriptionCounter() {
            const description = document.getElementById('StoreDescription');
            const counter = document.getElementById('descriptionCounter');

            if (description && counter) {
                counter.textContent = description.value?.length || 0;
                description.addEventListener('input', function() {
                    counter.textContent = this.value.length;
                });
            }
        }

        // Image upload handling
        function initializeImageUpload() {
            const imageInput = document.getElementById('newProfileImage');
            const preview = document.getElementById('newImagePreview');
            const previewImg = preview?.querySelector('img');
            const removeBtn = document.getElementById('removeNewImage');
            const deleteCurrentBtn = document.getElementById('deleteCurrentImageBtn');
            const removeCurrentInput = document.getElementById('removeCurrentImageInput');

            if (imageInput) {
                imageInput.addEventListener('change', function(e) {
                    if (this.files && this.files[0]) {
                        const reader = new FileReader();
                        reader.onload = function(e) {
                            if (previewImg) previewImg.src = e.target.result;
                            if (preview) preview.style.display = 'block';
                        };
                        reader.readAsDataURL(this.files[0]);
                    }
                });
            }

            if (removeBtn) {
                removeBtn.addEventListener('click', function() {
                    imageInput.value = '';
                    if (preview) preview.style.display = 'none';
                });
            }

            if (deleteCurrentBtn) {
                deleteCurrentBtn.addEventListener('click', function() {
                    if (confirm('هل أنت متأكد من حذف الصورة الحالية؟')) {
                        removeCurrentInput.value = 'true';
                        const currentImage = document.getElementById('currentImage');
                        if (currentImage) currentImage.style.opacity = '0.3';
                        this.style.display = 'none';
                        showAlert('سيتم حذف الصورة عند الحفظ', 'info');
                    }
                });
            }
        }

        // Category selection
        function initializeCategorySelection() {
            const categorySelect = document.getElementById('categorySelect');
            const subCategory1Select = document.getElementById('subCategory1Select');
            const subCategory2Select = document.getElementById('subCategory2Select');
            const addBtn = document.getElementById('addCategoryBtn');

            categorySelect.addEventListener('change', function() {
                const categoryId = this.value;
                subCategory1Select.innerHTML = '<option value="">اختر الفئة الفرعية</option>';
                subCategory2Select.innerHTML = '<option value="">اختر التخصص</option>';
                subCategory1Select.disabled = true;
                subCategory2Select.disabled = true;
                addBtn.disabled = true;

                if (categoryId) {
                    fetch(`/StoreManagement/GetSubCategories1?categoryId=${categoryId}`)
                        .then(r => r.json())
                        .then(data => {
                            if (data.length > 0) {
                                subCategory1Select.disabled = false;
                                data.forEach(item => {
                                    subCategory1Select.innerHTML += `<option value="${item.id}">${item.name}</option>`;
                                });
                            }
                        });
                }
            });

            subCategory1Select.addEventListener('change', function() {
                const subCategory1Id = this.value;
                subCategory2Select.innerHTML = '<option value="">اختر التخصص</option>';
                subCategory2Select.disabled = true;
                addBtn.disabled = true;

                if (subCategory1Id) {
                    fetch(`/StoreManagement/GetSubCategories2?subCategory1Id=${subCategory1Id}`)
                        .then(r => r.json())
                        .then(data => {
                            if (data.length > 0) {
                                subCategory2Select.disabled = false;
                                data.forEach(item => {
                                    subCategory2Select.innerHTML += `<option value="${item.id}">${item.name}</option>`;
                                });
                            }
                        });
                }
            });

            subCategory2Select.addEventListener('change', function() {
                addBtn.disabled = !this.value;
            });

            addBtn.addEventListener('click', function() {
                const subCat2Id = parseInt(subCategory2Select.value);
                const subCat2Name = subCategory2Select.options[subCategory2Select.selectedIndex].text;
                const subCat1Name = subCategory1Select.options[subCategory1Select.selectedIndex].text;
                const catName = categorySelect.options[categorySelect.selectedIndex].text;

                // Check if already exists
                if (existingCategoryIds.includes(subCat2Id) || selectedCategories.includes(subCat2Id)) {
                    showAlert('هذا التخصص موجود بالفعل', 'warning');
                    return;
                }

                selectedCategories.push(subCat2Id);
                updateSelectedCategoriesDisplay(subCat2Id, `${catName} > ${subCat1Name} > ${subCat2Name}`);
                updateHiddenInput();

                // Reset selects
                categorySelect.value = '';
                subCategory1Select.innerHTML = '<option value="">اختر الفئة الفرعية</option>';
                subCategory2Select.innerHTML = '<option value="">اختر التخصص</option>';
                subCategory1Select.disabled = true;
                subCategory2Select.disabled = true;
                addBtn.disabled = true;
            });
        }

        function updateSelectedCategoriesDisplay(id, name) {
            const container = document.getElementById('selectedCategoriesDisplay');
            const list = document.getElementById('selectedCategoriesList');
            container.style.display = 'block';

            const badge = document.createElement('div');
            badge.className = 'category-badge new-category-badge';
            badge.dataset.categoryId = id;
            badge.innerHTML = `
                <span>${name}</span>
                <button type="button" class="remove-category-btn" onclick="removeNewCategory(${id})">
                    <i class="fas fa-times"></i>
                </button>
            `;
            list.appendChild(badge);
        }

        function removeNewCategory(id) {
            selectedCategories = selectedCategories.filter(c => c !== id);
            const badge = document.querySelector(`#selectedCategoriesList .category-badge[data-category-id="${id}"]`);
            if (badge) badge.remove();

            if (selectedCategories.length === 0) {
                document.getElementById('selectedCategoriesDisplay').style.display = 'none';
            }
            updateHiddenInput();
        }

        function removeCategory(id) {
            if (confirm('هل أنت متأكد من حذف هذا التخصص؟')) {
                fetch(`/StoreManagement/RemoveCategory?categoryId=${id}`, {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ''
                    }
                })
                .then(r => r.json())
                .then(data => {
                    if (data.success) {
                        const badge = document.querySelector(`#currentCategoriesContainer .category-badge[data-category-id="${id}"]`);
                        if (badge) badge.remove();

                        // Remove from existingCategoryIds
                        const index = existingCategoryIds.indexOf(id);
                        if (index > -1) existingCategoryIds.splice(index, 1);

                        showAlert(data.message, 'success');
                    } else {
                        showAlert(data.message, 'error');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    showAlert('حدث خطأ أثناء حذف التخصص', 'error');
                });
            }
        }

        function updateHiddenInput() {
            const allCategories = [...existingCategoryIds.filter(id => id != null), ...selectedCategories];
            document.getElementById('storeCategoriesInput').value = JSON.stringify(allCategories);
        }

        // Form submit
        function initializeFormSubmit() {
            const form = document.getElementById('editStoreForm');
            const submitBtn = document.getElementById('submitBtn');

            form.addEventListener('submit', function(e) {
                // Update hidden input with all categories
                updateHiddenInput();

                submitBtn.disabled = true;
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>جاري الحفظ...';

                setTimeout(() => {
                    submitBtn.disabled = false;
                    submitBtn.innerHTML = '<i class="fas fa-save me-2"></i>حفظ التغييرات';
                }, 15000);
            });
        }

        // Alerts
        function showAlert(message, type = 'info') {
            document.querySelectorAll('.alert.auto-dismiss').forEach(a => a.remove());

            const icons = {
                'success': 'fa-check-circle',
                'error': 'fa-exclamation-circle',
                'warning': 'fa-exclamation-triangle',
                'info': 'fa-info-circle'
            };

            const alertDiv = document.createElement('div');
            alertDiv.className = `alert alert-${type === 'error' ? 'danger' : type} alert-dismissible fade show auto-dismiss`;
            alertDiv.style.cssText = 'position:fixed;top:20px;right:20px;z-index:9999;max-width:350px;box-shadow:0 4px 15px rgba(0,0,0,0.2);';
            alertDiv.innerHTML = `<i class="fas ${icons[type]} me-2"></i>${message}<button type="button" class="btn-close" data-bs-dismiss="alert"></button>`;

            document.body.appendChild(alertDiv);
            setTimeout(() => alertDiv.remove(), 4000);
        }
    </script>
}
